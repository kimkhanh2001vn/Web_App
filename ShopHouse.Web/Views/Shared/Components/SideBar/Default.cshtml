@model SideBarViewModel
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc;
@{ var culture = CultureInfo.CurrentCulture.Name; }

<!--== Start Preloader Content ==-->
<div class="preloader-wrap">
    <div class="preloader">
        <span class="dot"></span>
        <div class="dots">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</div>
<!--== End Preloader Content ==-->

<header class="header-area header-default header-style2 header-transparent sticky-header">
    <div class="container-fluid">
        <div class="row row-gutter-0 align-items-center">
            <div class="col-12">
                <div class="header-align">
                    <div class="header-align-left">
                        <div class="header-logo-area">
                            <a href="/@culture/Home/Index">
                                <img class="logo-main d-none d-sm-block" src="~/assets/img/logo-light.svg" alt="Logo" />
                                <img class="logo-main d-sm-none" src="~/assets/img/logo-main-light.svg" alt="Logo" />
                                <img class="logo-light" src="~/assets/img/LDGIF.gif" alt="Logo" style="margin-bottom: 35px"/>
                            </a>
                        </div>
                        <div class="header-navigation-area d-none d-xl-block">

                            <ul class="main-menu nav justify-content-center position-relative">
                                <li class="has-submenu active">
                                    <a href="/@culture/Home/Index">Trang Chủ</a>
                                    <ul class="submenu-nav">
                                        <li><a href="/@culture/Home/About">Giới Thiệu</a></li>
                                        <li><a href="/@culture/Home/Contact">Liên Hệ</a></li>
                                        <li><a href="index-3.html">Bảo mật chính</a></li>
                                    </ul>
                                </li>
                                
                                <li class="has-submenu">
                                    <a href="#">Mua Sắm</a>
                                    <ul class="submenu-nav">
                                        @foreach(var item in Model.Categories)
                                        {
                                            <li><a href="/@culture/Product/Category/@item.ID">@item.Name</a></li>
                                        }
                                    </ul>
                                </li>
                                <li class="has-submenu">
                                    <a href="blog.html">Trang</a>
                                    <ul class="submenu-nav">
                                        <li><a href="/@culture/Product/Category">Danh Sách Sản Phầm</a></li>
                                        <li><a href="/@culture/Home/ComingSoon">Sắp ra mắt</a></li>
                                        <li><a href="/@culture/Home/FAQs">FAQs</a></li>
                                    </ul>
                                </li>
                                <li><a href="/@culture/Home/Collections">Bộ sưu tập mới</a></li>
                                <li>
                                    <a href="/@culture/Home/Blog">Blog</a>
                                </li>
                                <li><a href="#">Lookbook</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="header-align-right">
                        <div class="header-action-area">
                            <div class="header-action-search-form">
                                <div class="search-form">
                                    <form action="/@culture/product/Category" method="post">
                                        <div class="form-input-item">
                                            <label for="action-search" class="sr-only">Tìm Kiếm</label>
                                            <input type="text" name="keyword" value="@ViewBag.keyword" placeholder="tìm kiếm...">
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="header-action-search">
                                <button class="btn-search btn-search-menu">
                                    <i class="lastudioicon-zoom-1"></i>
                                </button>
                            </div>
                            <div class="header-action-cart">
                                <button class="btn-cart cart-icon">
                                    <span class="cart-count">
                                       @ViewBag.NumberCart
                                    </span>
                                    <i class="lastudioicon-shopping-cart-2"></i>
                                </button>
                            </div>
                            @if(User.Identity.IsAuthenticated)
                            {
                                <div class="header-action-login ">
                                    <a class="btn-login" onclick="window.location.href='/@culture/account/Profile'">
                                        <i class="lastudioicon-single-01-2"></i>
                                        @User.Identity.Name
                                    </a>
                                </div>
                                <div class="header-action-cart">
                                    <form asp-controller="account" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-log-out"></span>
                                            <span>Log out</span>
                                        </button>
                                    </form>
                                    
                                </div>                                 
                            }
                            else
                            {
                                <div class="header-action-account d-none d-xxl-block">
                                    <button class="btn-sign-up" onclick="window.location.href='/@culture/account/login'">
                                        Sign Up
                                    </button>
                                </div>
                            }
                            <button class="btn-menu d-xl-none">
                                <i class="lastudioicon-menu-3-1"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
