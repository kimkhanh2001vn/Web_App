@model ShopHouse.ViewModels.System.Users.UserDeleteRequest

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="mt-3 mb-2">
        <h3 class="h3 mb-2 text-gray-800">
            Xóa Người Dùng
        </h3>
    </div>

    <p class="mb-4">
        Bạn đã sẵn sàn muốn xóa <span>@Model.ID</span> này không?
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a class="btn btn-outline-info" asp-action="Index">Trở lại</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ID)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="ID" hidden />
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
